<%= render "shared/header" %>

<div class="user-edit">
  <div class="user-edit-top-wrapper">
    <div class="user-edit-main-wrapper">

      <div classs="left-contents">
        <div class="user-edit-title">
          <h1>User Infomation</h1>
        </div>

        <div class="user-edit-subtitle">
          <h4>ユーザー情報の変更</h4>
        </div>
      </div>

      <div class="right-contents">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="user-edit-forms">

            <div class="user-edit-field">
              <div class="user-edit-text">Nickname</div>
              <div><%= f.text_field :nickname, autocomplete: "nickname", class: "user-edit-input" %></div>
            </div>

            <div class="user-edit-field">
              <div class="user-edit-text">E-mail</div>
              <div><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-edit-input" %></div>
            

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>
            </div>

            <div class="user-edit-field">
              <div class="user-edit-text">Password<span>（変更しない場合は入力しないでください）</span></div>
              <div><%= f.password_field :password, autocomplete: "new-password", class: "user-edit-input" %></div>
              <% if @minimum_password_length %>
                <br />
                <div class="user-edit-text"><span>※6字以上</span></div>
              <% end %>
            </div>

            <div class="user-edit-field">
              <div class="user-edit-text">Password<span>（確認のため再入力してください）</span></div>
              <div><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "user-edit-input" %></div>
            </div>

            <div class="user-edit-field">
              <%= f.submit "Update", class: "user-edit-btn" %>
            </div>

          </div>

        <% end %>
      </div>
    </div>

    <div class="user-edit-del">
      <h3>Cancel my account</h3>

      <p>本アカウントの削除はこちらから <%= button_to "Cancel my account", registration_path(resource_name), class: "user-edit-del-btn", data: { confirm: "本当にアカウント削除しますか？",
                  cancel: "CANCEL",
                  commit: "OK" }, title: "Delete a Account", method: :delete %></p>

      <div class="user-edit-back-link"><%= link_to "Back", :back %></div>
    </div>
  </div>
</div>